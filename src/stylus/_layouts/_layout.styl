/*! --meyer-reset------------------------------ */
meyer-reset()
/*! --box-sizing-reset------------------------- */
box-sizing-reset()
/*! --normalize-------------------------------- */
normalize()

/*! --Style-layout----------------------------- */
html,
body
    +above('s')
        font-size: 80%
    +between('s', 'l')
        font-size: 95%
    +below('l')
        font-size: 100%
    font-family: 'Roboto'
    height: 100%

main
    margin-bottom: -5rem
    margin-top: -4rem
    min-height: 100%
    padding-bottom: 5rem
    padding-top: 4rem


.section
    padding: 4rem 2%
    position: relative

.container
    clearfix()
    margin: 0 auto
    max-width: 1050px
    padding: 0 15px
    position: relative
    width: 100%
    .row
        clearfix()
        margin: 0 -15px
        position: relative


.indent10
    margin: 10px

.indent20
    margin: 20px

.indent30
    margin: 30px

.indent40
    margin: 40px

.indent50
    margin: 50px

/*! --Clearfix-------------------------------- */
.clearfix
    clearfix()
