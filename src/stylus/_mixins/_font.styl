font-url($folder, $file)
    return '../fonts/' + $folder + '/' + $file

font-face($family, $folder, $file = $folder, $weight = normal, $style = normal)
    @font-face
        font-family: $family
        src url(font-url($folder, $file + '.eot'))
        src url(font-url($folder, $file + '.eot?#iefix')) format('embedded-opentype'),
            url(font-url($folder, $file + '.woff')) format('woff'),
            url(font-url($folder, $file + '.ttf')) format('truetype'),
            url(font-url($folder, $file + '.svg#'+ $family)) format('svg')
        font-style: $style
        font-weight: $weight
